html
body
  min-height 100%

body
  padding 50px
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background linear-gradient(top, #E9E9E9, #fff)
  background #E9E9E9

body.mobileui
  width 100%
  height 100%
  background #000
  vertical-align middle
  margin 0
  padding 0
  text-align center

  p
  	display block
  	height 100%
  	color #fff
  	vertical-align middle
  	font 5em "Lucida Grande", Helvetica, Arial, sans-serif

body.mobileui.playing
	background #0f0

	p
		color #000

body.mobileui.gameover
	background #f00

body.mobileui.winner.position1
		background #D9D919

body.mobileui.winner.position2
		background #E6E8FA

body.mobileui.winner.position3
		background #8C7853

body.mobileui.winner
	p
		color #000

a
	text-decoration none
	color #00B7FF

h1
	font-size 60px
	font-weight bold
	margin 0 0 30px
	text-shadow 2px 2px 3px white
	text-align center
	color #F00

.mobile h1
	font-size 40px
	color #F00

.mobileui .join
	text-align left

	h1
		margin 0
		font-size 40px
		color #F00

.controls
	margin 0 auto
    box-orient horizontal
    box-align center
    box-pack center
    border-radius 5px
	display block
	text-align center

.controls a
	text-decoration none
	display inline-block
	padding 10% 0
	width 50%
	margin 2.5% 0 0 0
	color #252525
	font-size 18px
	text-shadow 1px 1px 2px #ccc

.controls a img
	margin 0
	padding 0

.left, .right
	display: none

.home
	text-align center
	width 45%
	margin 0 auto
	
	p
		font-size 24px
		margin 0 0 30px
		text-shadow 2px 2px 3px white
		color	#F00

	img
		box-shadow 0 40px 46px -6px #ccc
		border 1px solid #fcfcfc

.race
	p
		font-size 24px
		margin 0 0 30px
		text-shadow 2px 2px 3px white
		text-align center

	.racers

		margin 2em auto
		width 50%

		ol
			list-style-type bullet

			li
				text-align left
				margin 2em 0

			img
				vertical-align middle

canvas
		box-shadow 0 40px 46px -6px #ccc
		border 1px solid #fcfcfc
		margin 0 auto
		display block