script
	var WTF = WTF || {};
	WTF.numPlayers = !{numPlayers};
	WTF.users = !{JSON.stringify(users)};
	WTF.remainingPlayers = WTF.numPlayers;
	for(var i in WTF.users) {
		WTF.remainingPlayers--;
	}
	WTF.qrImage = new Image();
	WTF.qrImage.onload = function() {
		WTF.setupCanvas();
	};
	WTF.qrImage.src = "!{image}";